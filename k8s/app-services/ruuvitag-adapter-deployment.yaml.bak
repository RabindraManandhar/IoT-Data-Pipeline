apiVersion: apps/v1
kind: Deployment
metadata:
  name: ruuvitag-adapter
  namespace: iot-pipeline
spec:
  replicas: 2
  selector:
    matchLabels:
      app: ruuvitag-adapter
  template:
    metadata:
      labels:
        app: ruuvitag-adapter
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "8002"
    spec:
      serviceAccountName: iot-pipeline-cluster-sa
      containers:
      - name: ruuvitag-adapter
        image: europe-north1-docker.pkg.dev/prj-mtp-aiot-dip/iot-pipeline/ruuvitag-adapter:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 8002
          name: metrics
        env:
        - name: PYTHONUNBUFFERED
          value: "1"
        - name: METRICS_PORT
          value: "8002"
        - name: CONFIG_FILE_PATH
          value: "/app/config.yaml"
        - name: GCP_PROJECT_ID
          value: "prj-mtp-aiot-dip"
        envFrom:
        - secretRef:
            name: iot-pipeline-secrets
        volumeMounts:
        - name: app-config
          mountPath: /app/config.yaml
          subPath: config.yaml
        - name: schema
          mountPath: /app/src/schemas
        resources:
          requests:
            memory: "512Mi"
            cpu: "300m"
          limits:
            memory: "1Gi"
            cpu: "800m"
        livenessProbe:
          httpGet:
            path: /metrics
            port: 8002
          initialDelaySeconds: 60
          periodSeconds: 30
        readinessProbe:
          httpGet:
            path: /metrics
            port: 8002
          initialDelaySeconds: 30
          periodSeconds: 10
      volumes:
      - name: app-config
        configMap:
          name: iot-pipeline-config
      - name: schema
        configMap:
          name: avro-schemas